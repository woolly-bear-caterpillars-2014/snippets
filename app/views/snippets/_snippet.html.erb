<div class="snippet">
	<h2 class="snippet-title buttons"><%= snippet.title %></h2>

  <% if current_user %>
    <a href="users/<%= current_user.id %>/cheatsheets/newsnippet/<%= snippet.id %>" data-no-turbolink><img class="buttons" src="https://cdn1.iconfinder.com/data/icons/windows-8-metro-style/512/add_list.png" width="3%"></a>
    <% if snippet.author.id == current_user.id %>
      <div class="buttons"><a href="/snippets/<%= snippet.id %>/edit" data-no-turbolink><img src="http://png-5.findicons.com/files/icons/2711/free_icons_for_windows8_metro/512/edit_property.png" width="3%"></a></div>
      <div class="buttons"><%= link_to image_tag("https://cdn1.iconfinder.com/data/icons/icons-unleashed-vol1/256/-trash.png", width: '3%'), snippet, method: :delete, data: { confirm: 'Are you sure?' } %></div>
    <% end %>
  <% else %>
    <a href="/users/login" data-no-turbolink><img class="buttons" src="https://cdn1.iconfinder.com/data/icons/windows-8-metro-style/512/add_list.png" width="3%"></a>
  <% end %>


	<div id="snippet-readonly" class="editor readonly" alt="<%=snippet.language%>" data-no-turbolink><%= snippet.code %></div>
	<% if snippet.tags %>
	  <div class="tag-list">
	  	<ul class="tags">
	  	<% snippet.tags.each do |tag| %>
	  		<li class="tag"><%= tag.title %></li>
	  	<% end %>
	  	</ul>
	  </div>
  <% end %>
</div>
