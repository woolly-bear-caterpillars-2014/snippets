
<div class="snippet">

	<h2 class="snippet-title buttons"><%= snippet.title %></h2>
  <% if current_user && snippet.author.id == current_user.id %>
    <div class="buttons"><a href="/snippets/<%= snippet.id %>/edit" data-no-turbolink><img src="http://png-5.findicons.com/files/icons/2711/free_icons_for_windows8_metro/512/edit_property.png" width="3%"></a></div>
  <% end %>

  <% if current_user %>
  <div class="buttons"><a href="/users/<%= current_user.id %>/cheatsheets/removesnippet/<%= snippet.id %>"
  	data-no-turbolink><img src="https://cdn1.iconfinder.com/data/icons/icons-unleashed-vol1/256/-trash.png" width="3%"></a>
  </div>
  <% end %>

  <div id="snippet-readonly" class="editor readonly" alt="<%=snippet.language%>" data-no-turbolink><%= snippet.code %>
  </div>

  <% if snippet.tags %>
    <div class="tag-list">
      <ul class="tags">
	  	<% snippet.tags.each do |tag| %>
	  		<li class="tag" id="<%= tag.title %>"><%= tag.title %></li>
	  	<% end %>
	  </ul>
	</div>
  <% end %>

</div>
