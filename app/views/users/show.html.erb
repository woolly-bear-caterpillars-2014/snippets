<% if current_user %>

  <div id="wrapper">
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#">
                        &#9651; TOP
                    </a>
                </li>
                <!-- THE LOGIC BELOW SHOULD PROBABLY BE MOVED INTO THE CONTROLLER -->
                <% unique_tags = [] %>
                <% @user.cheatsheets.first.snippets.each do |snippet| %>
                    <% snippet.tags.each do |tag| %>
                      <% unique_tags << tag.title %>
                    <% end %>
                <% end %>

                <% unique_tags = unique_tags.uniq %>
                <!-- LOGIC-TO-BE-MOVED TO CONTROLLER ENDS HERE -->

                <% unique_tags.each do |tag| %>
                  <li>
                      <a href="#<%= tag %>"><%= tag.upcase %></a>
                  </li>
              <% end %>
            </ul>
        </div>

        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%= render 'cheatsheets/show' %>

<% else %>

  <%= render 'form' %>

<% end %>



